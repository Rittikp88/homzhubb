{
  "name": "homzhub",
  "private": true,
  "workspaces": {
    "packages": [
      "packages/*"
    ],
    "nohoist": []
  },
  "scripts": {
    "lint": "yarn workspaces run lint",
    "lint:common": "yarn workspace @homzhub/common run lint",
    "lint:mobile": "yarn workspace @homzhub/mobile run lint",
    "lint:web": "yarn workspace @homzhub/web run lint",
    "lint:fix": "yarn workspaces run lint:fix",
    "start:web": "yarn workspace @homzhub/web run start",
    "start:mobile": "yarn workspace @homzhub/mobile run start",
    "test": "yarn workspaces run test",
    "test:common": "yarn workspace @homzhub/common run test",
    "test:mobile": "yarn workspace @homzhub/mobile run test",
    "test:web": "yarn workspace @homzhub/web run test",
    "android": "jetify && yarn workspace @homzhub/mobile run android",
    "android:bundle": "jetify && yarn workspace @homzhub/mobile run android:bundle",
    "android:build": "jetify && yarn workspace @homzhub/mobile run android:build",
    "android:clean": "yarn workspace @homzhub/mobile run android:clean",
    "ios": "yarn workspace @homzhub/mobile run ios",
    "pod:install": "yarn workspace @homzhub/mobile run pod:install",
    "ios:bundle": "yarn workspace @homzhub/mobile run ios:bundle",
    "ios:build": "yarn workspace @homzhub/mobile run ios:build",
    "ios:clean": "yarn workspace @homzhub/mobile run ios:clean",
    "format": "yarn workspaces run format",
    "sonar": "yarn workspaces run sonar",
    "premerge": "yarn format && yarn lint && yarn test -u --passWithNoTests",
    "postinstall": "jetify"
  },
  "dependencies": {
    "@types/react-native-calendars": "^1.20.8",
    "axios": "^0.19.2",
    "formik": "^1.5.8",
    "i18next": "^19.4.4",
    "json2typescript": "^1.4.1",
    "lodash": "^4.17.15",
    "moment": "^2.26.0",
    "react": "16.13.1",
    "react-i18next": "^11.4.0",
    "react-native": "0.62.2",
    "react-native-calendars": "^1.296.0",
    "react-native-progress": "^4.1.2",
    "react-redux": "^7.2.0",
    "redux": "^4.0.5",
    "redux-logger": "^3.0.6",
    "redux-saga": "^1.1.3",
    "url-regex": "^5.0.0",
    "yup": "^0.28.5"
  },
  "devDependencies": {
    "@babel/core": "^7.9.6",
    "@babel/plugin-proposal-class-properties": "^7.8.3",
    "@babel/plugin-proposal-decorators": "^7.8.3",
    "@babel/preset-env": "^7.9.6",
    "@babel/preset-react": "^7.9.4",
    "@babel/preset-typescript": "^7.9.0",
    "@types/enzyme": "^3.10.3",
    "@types/enzyme-adapter-react-16": "^1.0.5",
    "@types/i18next": "^13.0.0",
    "@types/jest": "^24.0.15",
    "@types/jsdom": "^12.2.4",
    "@types/lodash": "^4.14.154",
    "@types/react": "^16.9.34",
    "@types/react-i18next": "^8.1.0",
    "@types/react-native": "^0.62.7",
    "@types/react-redux": "^7.1.8",
    "@types/react-test-renderer": "^16.9.2",
    "@types/redux-logger": "^3.0.7",
    "@types/redux-mock-store": "^1.0.2",
    "@types/yup": "^0.28.3",
    "@typescript-eslint/eslint-plugin": "^2.31.0",
    "@typescript-eslint/parser": "^2.31.0",
    "babel-core": "^6.26.3",
    "babel-eslint": "^10.1.0",
    "babel-jest": "^24.8.0",
    "enzyme": "^3.10.0",
    "enzyme-adapter-react-16": "^1.14.0",
    "enzyme-to-json": "^3.4.4",
    "eslint": "6.8.0",
    "eslint-config-airbnb": "18.1.0",
    "eslint-config-airbnb-typescript": "^7.2.1",
    "eslint-config-prettier": "^6.11.0",
    "eslint-import-resolver-typescript": "^2.0.0",
    "eslint-plugin-import": "^2.20.1",
    "eslint-plugin-jsx-a11y": "^6.2.3",
    "eslint-plugin-prettier": "^3.1.3",
    "eslint-plugin-react": "7.20.0",
    "eslint-plugin-react-hooks": "^4.0.0",
    "eslint-plugin-react-native": "^3.8.1",
    "husky": "^4.2.5",
    "jest": "^24.1.0",
    "jest-enzyme": "^7.0.2",
    "jest-sonar-reporter": "^2.0.0",
    "jsdom": "^15.1.1",
    "prettier": "^2.0.5",
    "react-test-renderer": "^16.13.1",
    "redux-mock-store": "^1.5.4",
    "sonarqube-scanner": "^2.6.0",
    "ts-node": "^8.10.1",
    "typescript": "^3.8.2"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn format && yarn lint"
    }
  }
}
