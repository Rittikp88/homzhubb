{
  "name": "@homzhub/web",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "prestart": "yarn workspace @homzhub/common build",
    "start": "react-app-rewired start",
    "build": "react-app-rewired build",
    "test": "CI=true react-app-rewired test --coverage --env=jsdom",
    "eject": "react-app-rewired eject",
    "lint": "eslint 'src/**/*.{js,ts,tsx}'",
    "lint:fix": "eslint 'src/**/*.{js,ts,tsx}' --fix",
    "format": "prettier --write 'src/**/*.{ts,tsx,scss,css}'",
    "sonar": "ts-node sonar-project.ts"
  },
  "dependencies": {
    "@homzhub/common": "0.0.1",
    "crypto-js": "^4.0.0",
    "node-sass": "^4.14.1",
    "react-dom": "^16.13.1",
    "react-native-web": "^0.12.2",
    "react-scripts": "3.4.1"
  },
  "devDependencies": {
    "@types/crypto-js": "^3.1.45",
    "@types/react-dom": "^16.9.0",
    "babel-plugin-react-native-web": "^0.12.2",
    "react-app-rewired": "^2.1.6"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "jest": {
    "snapshotSerializers": [
      "enzyme-to-json/serializer"
    ],
    "collectCoverageFrom": [
      "src/**/*.tsx",
      "!src/index.tsx"
    ],
    "coverageReporters": [
      "text"
    ]
  },
  "jestSonar": {
    "reportPath": "coverage",
    "reportFile": "test-reporter.xml",
    "indent": 4
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
